import java.util.Scanner;

class Triangle {
    private double base;
    private double height;

    public Triangle() {
        this.base = 0;
        this.height = 0;
    }

    public void setBase(double base) {
        this.base = base;
    }

    public void setHeight(double height) {
        this.height = height;
    }

    public double calculateArea() {
        return 0.5 * base * height;
    }
}

